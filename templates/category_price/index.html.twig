{% extends 'base.html.twig' %}

{% block title %}CategoryPrice index{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Discount</h1>
    </div>
</div><!--/.row-->
        

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Liste des Discount
                    <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span></div>
            <div class="panel-body">
                    
                <div class="col-md-12">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Discount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_price in category_prices %}
            <tr>
                <td>{{ category_price.id }}</td>
                <td>{{ category_price.titre }}</td>
                <td>{{ category_price.discount }}</td>
                <td>
                    <a href="{{ path('category_price_show', {'id': category_price.id}) }}">show</a>
                    <a href="{{ path('category_price_edit', {'id': category_price.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>


{% extends 'baseF.html.twig' %}

{% block body %}
<section class="inner_cover parallax-window" data-parallax="scroll" data-image-src="#">
    <div class="overlay_dark" style="background: url('/assets/img/bg/bg-img.png');"></div>
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-12">
                <div class="inner_cover_content">
                    <h3>
                        News
                    </h3>
                </div>
            </div>
        </div>

        <div class="breadcrumbs">
            <ul>
                <li><a href="#">Home</a>   |  </li>
                <li><span>News</span></li>
            </ul>
        </div>
    </div>
</section>
<!--page title section end-->


<!--events section -->
<section class="pt100 pb100">
    <div class="container">
        <div class="row justify-content-center">
            <!--blog section start -->
            
            <div class="col-12 col-md-8">
            {% for event in eventsdate %}
                <div class="blog_card">
                    <img width="754" height="462" src="/uploads/{{ event.image }}" alt="blog News ">
                    <div class="blog_box_data">
                        <span class="blog_date">
                                {{ event.debutAt ? event.debutAt|date('F j, Y,') : '' }}
                           
                        </span>
                        <div class="blog_meta">
                            <span><a href="#"> nombre de place :{{ event.nbrPlace }}</a></span>  | <span><a href="#">  {{ event.category.titre }}   </a></span>|  <span><a href="#">{{ event.prix }} {{ event.devises.titre }}</a></span>
                        </div>
                        <h5>
                            {{ event.titre }}
                        </h5>
                        <p class="blog_word">
                            {{ event.description }}
                        </p>
                        <a href="{{ path('detailevent', {'id': event.id}) }}" class="readmore_btn">Read More</a>
                    </div>
                </div>
            {% endfor %}
                


               

            </div>
            <!--blog section end-->

            <!--sidebar section -->
            <div class="col-12 col-md-4">

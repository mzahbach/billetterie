    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notification.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ notification.nom }}</td>
            </tr>
            <tr>
